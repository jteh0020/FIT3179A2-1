{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Aircraft Movements by Major Malaysian Airports (2017â€“2024)",
    "fontSize": 18,
    "fontWeight": "bold",
    "anchor": "middle"
  },
  "width": 900,
  "height": 480,
  "data": {
    "url": "https://raw.githubusercontent.com/jteh0020/FIT3179A2-1/main/data/aircraft_movement.csv",
    "format": {"type": "csv"}
  },

  "transform": [
    {
      "fold": ["2017","2018","2019","2020","2021","2022","2023","2024"],
      "as": ["Year","Movements"]
    },
    {
      "calculate": "toNumber(replace(datum.Movements, ',', ''))",
      "as": "MovementsNum"
    },
    {
      "filter": "AirportSelect == 'All' || datum.Airport == AirportSelect"
    }
  ],

  "params": [
    {
      "name": "AirportSelect",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "ALOR SETAR",
          "BINTULU",
          "IPOH",
          "JOHOR BHARU",
          "KLIA",
          "KLIA2",
          "KOTA BHARU",
          "KOTA KINABALU",
          "KUALA TERENGGANU",
          "KUANTAN",
          "KUCHING",
          "LABUAN",
          "LAHAD DATU",
          "LANGKAWI",
          "LIMBANG",
          "MELAKA",
          "MIRI",
          "MUKAH",
          "MULU",
          "PANGKOR",
          "PULAU PINANG",
          "REDANG",
          "SANDAKAN",
          "SIBU",
          "SUBANG",
          "TAWAU",
          "TIOMAN"
        ],
        "name": "Select Airport: "
      }
    }
  ],

  "mark": {
    "type": "line",
    "point": {"filled": true, "size": 60, "color": "white"},
    "strokeWidth": 2,
    "opacity": 0.9
  },

  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year",
      "axis": {"labelAngle": 0, "labelFontSize": 13, "titleFontSize": 15}
    },
    "y": {
      "field": "MovementsNum",
      "type": "quantitative",
      "title": "Aircraft Movements",
      "axis": {"labelFontSize": 13, "titleFontSize": 15, "grid": true}
    },
    "color": {
      "field": "Airport",
      "type": "nominal",
      "scale": {"scheme": "category20"},
      "legend": {"title": "Airport", "columns": 2, "labelFontSize": 11, "titleFontSize": 13}
    },
    "tooltip": [
      {"field": "Airport", "title": "Airport"},
      {"field": "Year"},
      {"field": "MovementsNum", "title": "Movements", "format": ","}
    ]
  },

  "config": {
    "background": "#fafafa",
    "axis": {"labelFontSize": 13, "titleFontSize": 15},
    "legend": {"labelFontSize": 13, "titleFontSize": 14}
  }
}
