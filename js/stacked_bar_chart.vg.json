{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Passenger Movement by Malaysian Airports (2017â€“2024)",
    "fontSize": 16,
    "fontWeight": "bold",
    "anchor": "middle"
  },
  "width": 1100,
  "height": 440,
  "padding": {"top": 10, "left": 80, "right": 40, "bottom": 120},
  "data": {
    "url": "https://raw.githubusercontent.com/jteh0020/FIT3179A2-1/main/data/pass_year.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "year_selection",
      "value": "2024",
      "bind": {
        "input": "select",
        "options": [
          "2017",
          "2018",
          "2019",
          "2020",
          "2021",
          "2022",
          "2023",
          "2024"
        ],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "fold": [
        "2017",
        "2018",
        "2019",
        "2020",
        "2021",
        "2022",
        "2023",
        "2024"
      ],
      "as": ["Year", "Passengers"]
    },
    {"calculate": "toNumber(datum.Passengers)", "as": "PassengersNum"},
    {"filter": "datum.Year == year_selection"}
  ],
  "mark": {"type": "bar", "cornerRadiusEnd": 3},
  "encoding": {
    "x": {
      "field": "Airport",
      "type": "nominal",
      "sort": "-y",
      "title": "Airport",
      "axis": {
        "labelAngle": -40,
        "labelFontSize": 12,
        "titleFontSize": 13,
        "labelPadding": 10,
        "titlePadding": 25
      }
    },
    "y": {
      "field": "PassengersNum",
      "type": "quantitative",
      "title": "Passengers per Year",
      "axis": {
        "labelFontSize": 12,
        "titleFontSize": 13,
        "labelPadding": 6,
        "titlePadding": 28
      }
    },
    "color": {
      "field": "Airport",
      "type": "nominal",
      "legend": null,
      "scale": {"scheme": "tableau10"}
    },
    "tooltip": [
      {"field": "Airport", "title": "Airport"},
      {"field": "Year", "title": "Year"},
      {"field": "PassengersNum", "title": "Total Passengers"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"labelFontSize": 12, "titleFontSize": 13}
  }
}
