{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Passenger Movement by Malaysian Airports (2017â€“2024)",
    "fontSize": 18,
    "fontWeight": "bold",
    "anchor": "middle"
  },
  "width": 1500,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/jteh0020/FIT3179A2-1/main/data/pass_year.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "fold": [
        "2017",
        "2018",
        "2019",
        "2020",
        "2021",
        "2022",
        "2023",
        "2024"
      ],
      "as": ["Year", "Passengers"]
    },
    {
      "calculate": "toNumber(datum.Passengers)",
      "as": "PassengersNum"
    }
  ],
  "params": [
    {
      "name": "year_selection",
      "value": "2024",
      "bind": {
        "input": "select",
        "options": [
          "2017",
          "2018",
          "2019",
          "2020",
          "2021",
          "2022",
          "2023",
          "2024"
        ],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "fold": [
        "2017",
        "2018",
        "2019",
        "2020",
        "2021",
        "2022",
        "2023",
        "2024"
      ],
      "as": ["Year", "Passengers"]
    },
    {
      "calculate": "toNumber(datum.Passengers)",
      "as": "PassengersNum"
    },
    {
      "filter": "datum.Year == year_selection"
    }
  ],
  "mark": {"type": "bar"},
  "encoding": {
    "x": {
      "field": "Airport",
      "type": "nominal",
      "sort": "-y",
      "title": "Airport",
      "axis": {"labelAngle": -45}
    },
    "y": {
      "field": "PassengersNum",
      "type": "quantitative",
      "title": "Passengers"
    },
    "color": {
      "field": "Airport",
      "type": "nominal",
      "legend": null,
      "scale": {"scheme": "tableau10"}
    },
    "tooltip": [
      {"field": "Airport", "title": "Airport"},
      {"field": "Year", "title": "Year"},
      {"field": "PassengersNum", "title": "Total Passengers"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"labelFontSize": 12, "titleFontSize": 13}
  }
}