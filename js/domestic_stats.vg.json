{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 10 Busiest Domestic Routes in Malaysia (2017–2024)",
  "width": 700,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/jteh0020/FIT3179A2-1/main/data/dom_sheet2.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Passenger_Trips": "number",
        "Year": "number"
      }
    }
  },

  "params": [
    {
      "name": "year_select",
      "value": 2017,
      "bind": {
        "input": "range",
        "min": 2017,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],

  "transform": [
    { "filter": "isValid(datum.Year) && datum.Year == year_select" },
    {
      "calculate": "datum.City1 < datum.City2 ? datum.City1 + ' ↔ ' + datum.City2 : datum.City2 + ' ↔ ' + datum.City1",
      "as": "Route"
    },
    {
      "aggregate": [
        { "op": "sum", "field": "Passenger_Trips", "as": "Total_Trips" }
      ],
      "groupby": ["Route"]
    },
    {
      "window": [{ "op": "rank", "as": "rank" }],
      "sort": [{ "field": "Total_Trips", "order": "descending" }]
    },
    { "filter": "datum.rank <= 10" }
  ],

  "layer": [
    {
      "mark": { "type": "bar", "cornerRadiusEnd": 3 },
      "encoding": {
        "y": {
          "field": "Route",
          "type": "nominal",
          "sort": "-x",
          "title": "Route"
        },
        "x": {
          "field": "Total_Trips",
          "type": "quantitative",
          "title": "Passenger Trips Per Month"
        },
        "color": {
          "condition": {
            "test": "datum.rank == 1",
            "value": "#006DAE"
          },
          "value": "#006DAE"
        },
        "opacity": {
          "condition": {
            "test": "datum.rank <= 3",
            "value": 1
          },
          "value": 0.4
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "fontSize": 12,
        "color": "black"
      },
      "encoding": {
        "y": { "field": "Route", "type": "nominal", "sort": "-x" },
        "x": { "field": "Total_Trips", "type": "quantitative" },
        "text": {
          "field": "Total_Trips",
          "type": "quantitative",
          "format": ","
        }
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "red",
        "strokeDash": [5, 5],
        "size": 2
      },
      "encoding": {
        "x": {
          "aggregate": "median",
          "field": "Total_Trips",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "red",
        "dx": 5,
        "dy": -10,
        "fontSize": 12,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": { "aggregate": "median", "field": "Total_Trips" },
        "text": {
          "aggregate": "median",
          "field": "Total_Trips",
          "format": ","

        }
      }
    }
  ]
}
