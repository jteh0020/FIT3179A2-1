{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 10 Busiest International Routes (2017–2024)",
  "width": 700,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/jteh0020/FIT3179A2-1/main/data/intl_sheet2.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Passenger_Trips": "number",
        "Year": "number"
      }
    }
  },
  
  "params": [
    {
      "name": "year_select",
      "value": 2017,
      "bind": {
        "input": "range",
        "min": 2017,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],

  "transform": [
    { "filter": "isValid(datum.Year) && datum.Year == year_select" },
    {
      "calculate": "datum.City1 + ' → ' + datum.City2",
      "as": "Route"
    },
    {
      "aggregate": [
        { "op": "sum", "field": "Passenger_Trips", "as": "Total_Trips" }
      ],
      "groupby": ["Route"]
    },
    {
      "window": [{ "op": "rank", "as": "rank" }],
      "sort": [{ "field": "Total_Trips", "order": "descending" }]
    },
    { "filter": "datum.rank <= 10" }
  ],

  "mark": {"type": "bar", "cornerRadiusEnd": 3},

  "encoding": {
    "y": {
      "field": "Route",
      "type": "nominal",
      "sort": "-x",
      "title": "Route"
    },
    "x": {
      "field": "Total_Trips",
      "type": "quantitative",
      "title": "Passenger Trips"
    },
    "color": {
      "field": "Total_Trips",
      "type": "quantitative",
      "scale": {"scheme": "blues"},
      "legend": {"title": "Passenger Trips"}
    },
    "tooltip": [
      {"field": "Route", "type": "nominal", "title": "Route"},
      {"field": "Total_Trips", "type": "quantitative", "title": "Passenger Trips", "format": ","}
    ]
  }
} 