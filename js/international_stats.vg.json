{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 10 Busiest International Routes from Malaysia (2017–2024)",
  "width": 700,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/jteh0020/FIT3179A2-1/main/data/intl_sheet2.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Passenger_Trips": "number",
        "Year": "number"
      }
    }
  },

  "params": [
    {
      "name": "year_select",
      "value": 2017,
      "bind": {
        "input": "range",
        "min": 2017,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],

  "transform": [
    {
      "filter": "isValid(datum.Year) && datum.Year == year_select"
    },
    {
      "filter": "indexof(['Kuala Lumpur','Penang','Kota Kinabalu','Langkawi','Kuching','Subang','Johor Bahru'], datum.City1) >= 0"
    },
    {
      "calculate": "datum.City1 + ' → ' + datum.City2",
      "as": "Route"
    },
    {
      "aggregate": [
        { "op": "sum", "field": "Passenger_Trips", "as": "Total_Trips" }
      ],
      "groupby": ["Route"]
    },
    {
      "window": [{ "op": "rank", "as": "rank" }],
      "sort": [{ "field": "Total_Trips", "order": "descending" }]
    },
    { "filter": "datum.rank <= 10" }
  ],

  "mark": {
    "type": "bar",
    "cornerRadiusEnd": 3,
    "color": "#1f77b4"
  },

  "encoding": {
    "y": {
      "field": "Route",
      "type": "nominal",
      "sort": "-x",
      "title": "Route"
    },
    "x": {
      "field": "Total_Trips",
      "type": "quantitative",
      "title": "Passenger Trips Per Month"
    },
    "tooltip": [
      { "field": "Route", "type": "nominal", "title": "Route" },
      {
        "field": "Total_Trips",
        "type": "quantitative",
        "title": "Passenger Trips",
        "format": ","
      }
    ]
  }
}
